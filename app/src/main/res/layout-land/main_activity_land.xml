<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <EditText
        android:id="@+id/main_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/main_color"
        android:textColor="@color/white"
        android:textSize="12pt"
        app:layout_constraintBottom_toTopOf="@+id/main_result"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="64dp" />

    <ImageView
        android:id="@+id/main_activity_settings"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_24"
        android:background="@drawable/shape_main_button"/>

    <TextView
        android:id="@+id/main_result"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="end|center_vertical"
        android:textColor="@color/text_color"
        android:textSize="12pt"
        app:layout_constraintBottom_toTopOf="@+id/main_button_container"
        android:background="@color/main_color"
        />


    <LinearLayout
        android:id="@+id/main_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/main_color">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_clear"
                style="@style/OptionButtonLand"

                android:text="CE" />

            <TextView
                android:id="@+id/main_memory"
                style="@style/OptionButtonLand"
                android:text="M" />

            <ImageView
                android:id="@+id/backspace"
                style="@style/MainBottonLand"
                android:layout_weight="1"
                android:scaleType="centerInside"
                tools:srcCompat="@drawable/ic_baseline_backspace_24" />


            <TextView
                android:id="@+id/main_dev"
                style="@style/MainBottonLand"
                android:text="รท" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_seven"
                style="@style/MainBottonLand"

                android:text="7" />

            <TextView
                android:id="@+id/main_eight"
                style="@style/MainBottonLand"
                android:text="8" />

            <TextView
                android:id="@+id/main_nine"
                style="@style/MainBottonLand"
                android:text="9" />

            <TextView
                android:id="@+id/main_multiply"
                style="@style/MainBottonLand"
                android:text="*" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_four"
                style="@style/MainBottonLand"
                android:text="4" />

            <TextView
                android:id="@+id/main_five"
                style="@style/MainBottonLand"
                android:text="5" />

            <TextView
                android:id="@+id/main_six"
                style="@style/MainBottonLand"
                android:text="6" />

            <TextView
                android:id="@+id/main_minus"
                style="@style/MainBottonLand"

                android:text="-" />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_one"
                style="@style/MainBottonLand"

                android:text="1" />

            <TextView
                android:id="@+id/main_two"
                style="@style/MainBottonLand"

                android:text="2" />

            <TextView
                android:id="@+id/main_three"
                style="@style/MainBottonLand"

                android:text="3" />

            <TextView
                android:id="@+id/main_plus"
                style="@style/MainBottonLand"

                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_dot"
                style="@style/MainBottonLand"
                android:text="." />

            <TextView
                android:id="@+id/main_zero"
                style="@style/MainBottonLand"
                android:text="0" />

            <TextView
                android:id="@+id/main_sqrt"
                style="@style/MainBottonLand"
                android:background="@drawable/ic_insights_24" />
            <TextView
                android:id="@+id/main_degree"
                style="@style/MainBottonLand"
                android:background="@drawable/ic_crop_square_24" />

            <TextView
                android:id="@+id/main_equals"
                style="@style/OptionButtonLand"
                android:layout_weight="1.33"
                android:text="="

                android:textColor="@color/main_color" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>